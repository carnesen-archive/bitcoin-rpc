  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch tests",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": [
        "${workspaceFolder}/node_modules/.bin/jest"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch example",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": [
        "src/example.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": [
        "src/server.ts"
      ]
    },
  ]
}
